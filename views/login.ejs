<div class="row mt-5">
    <div class="col-md-5 m-auto">
      <div class="card card-body border-warning">
        <h1 class="text-center text-success mb-3"><i class="fa-solid fa-person-walking-arrow-right"></i> Login</h1>
        <%- include('./partials/messages') %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-outline-info btn-block">Login</button>
        </form>
        <br>
        <div class="divider"></div>
        <div class="section">
            <a href="/auth/google" class="btn btn-outline-info btn-block">
                <i class="fab fa-google left"></i> Log In With Google
            </a>
        </div>

        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>